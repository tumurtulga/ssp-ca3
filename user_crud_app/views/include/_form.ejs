<!-- form handling -->
<form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Tumurtulga Batjargal">
        </div>
        <div class="form-group">
            <label for="role" class="text-light">Role</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="role" value="Super">
                <label for="radio-2" class="radio-label">Super</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="role" value="Admin">
                <label for="radio-3" class="radio-label">Admin</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-4" name="role" value="User">
                <label for="radio-4" class="radio-label">User</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-5" name="role" value="Client">
                <label for="radio-5" class="radio-label">Client</label>
            </div>
        </div>
        <div class="form-group">
            <label for="Email" class="text-light">Email</label>
            <input type="text" name="email" value="" placeholder="example@gmail.com">
        </div>
        <div class="form-group">
            <label for="Mobile" class="text-light">Mobile</label>
            <input type="text" name="mobile" value="" placeholder="0894426400">
        </div>
        <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-6" name="gender" value="Male">
                <label for="radio-6" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-7" name="gender" value="Female">
                <label for="radio-7" class="radio-label">Female</label>
            </div>
        </div>

        <div class="form-group">
            <label for="gender" class="text-light">Status</label>
            <div class="radio inline">
                <input type="radio" id="radio-8" name="status" value="Active">
                <label for="radio-8" class="radio-label">Active</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-9" name="status" value="Inactive">
                <label for="radio-9" class="radio-label">Inactive</label>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>